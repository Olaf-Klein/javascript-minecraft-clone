{
  "name": "minecraft-clone-client",
  "version": "1.0.0",
  "description": "Desktop client for JavaScript Minecraft clone",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "generate-icons": "node generate-icon.js",
    "check-setup": "node check-build-setup.js",
    "dist": "npm run generate-icons && npm run build && electron-builder",
    "dist:win": "npm run generate-icons && npm run build && electron-builder --win",
    "dist:mac": "npm run generate-icons && npm run build && electron-builder --mac",
    "dist:linux": "npm run generate-icons && npm run build && electron-builder --linux"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "three": "^0.158.0",
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "@types/three": "^0.158.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "jest": "^29.7.0",
    "style-loader": "^3.3.0",
    "css-loader": "^6.8.0",
    "electron-builder": "^24.6.4",
    "sharp": "^0.33.0"
  },
  "build": {
    "appId": "com.olafklein.minecraftclone",
    "productName": "JavaScript Minecraft Clone",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md",
      "!package-lock.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.svg"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.svg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.svg"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.svg",
      "uninstallerIcon": "assets/icon.svg",
      "installerHeaderIcon": "assets/icon.svg",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Minecraft Clone"
    }
  }
}